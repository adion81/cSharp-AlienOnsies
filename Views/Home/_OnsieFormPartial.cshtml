@model Onsie

<form asp-action="CreateOnsie" method="post">
    <div class="form-group">
        <label>Fabric: </label>
        <input asp-for="Fabric" class="form-control">
    </div>
    <div class="form-group">
        <label>Alien: </label>
        <input asp-for="Alien" class="form-control">
    </div>
    <div class="form-group">
        <label>Img Url: </label>
        <input asp-for="ImgUrl" class="form-control">
    </div>
    <div class="form-group">
        <label>Price: </label>
        <input asp-for="Price" class="form-control">
    </div>
    <div class="form-group">
        <label>Footed?: </label>
        <input asp-for="isFooted" class="form-control">
    </div>
    <input type="submit" class="btn btn-success" value="Add Onsie">
</form>